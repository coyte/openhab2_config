rule "Switch coffee machine off"
when
    Time cron "0 30 9 * * ?"
then
	logInfo("rules","Rule espresso runs (off)")
   	 Espressotimer.sendCommand(OFF)
end

rule "Switch coffee machine on"
when
    Time cron "0 45 6 * * ?"
then
    logInfo("rules","Rule espresso runs (on)")
    Espressotimer.sendCommand(ON)
end
